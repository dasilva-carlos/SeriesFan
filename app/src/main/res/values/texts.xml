<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text.Heading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="Text.Big" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="Text.Default" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="Text.Small" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>
</resources>